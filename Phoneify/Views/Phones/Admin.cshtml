@model IEnumerable<Phoneify.Models.ApplicationUser>

@{
    ViewBag.Title = "Admin View";
}

<div>
    <h2 class="well well-lg">Admin</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4">
                <div class="bs-component">
                    <div class="well well-lg">
                        <h2>Info:</h2>
                        <p>First Name: @item.FirstName</p>
                        <p>Birthday: @item.Birthday.ToString("dd MMM yyyy")</p>
                        <p>Email: @item.Email</p>

                        <h2>Phones:</h2>
                        @foreach (var phone in item.Phones)
                        {
                            <p>Type: @phone.PhoneType</p>
                            <p>Number: @phone.PhoneNumber</p>
                            <br/>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
